{
  "manifest_version": 3,
  "name": "Profile Lock",
  "version": "1.0.0",
  "description": "Lock your Chrome profile with a password for privacy protection",
  "permissions": [
    "storage",
    "tabs",
    "idle"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/lock-16.png",
      "48": "icons/lock-48.png",
      "128": "icons/lock-128.png"
    }
  },
  "icons": {
    "16": "icons/lock-16.png",
    "48": "icons/lock-48.png",
    "128": "icons/lock-128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["lock-overlay.css"],
      "run_at": "document_start",
      "all_frames": true
    }
  ]
}
